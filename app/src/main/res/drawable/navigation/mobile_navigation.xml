<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_contact_list">

    <fragment
        android:id="@+id/navigation_contact_list"
        android:name="de.fhe.ai.pme.contactapp.view.ui.contactlist.ContactListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_contact_list" />

    <fragment
        android:id="@+id/navigation_input"
        android:name="de.fhe.ai.pme.contactapp.view.ui.input.InputFragment"
        android:label="@string/title_contact_form"
        tools:layout="@layout/fragment_input" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="de.fhe.ai.pme.contactapp.view.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>